# vim: ft=zsh:ts=4:sw=4

function __edit_file_widget {
    # Uses fzf to search for files and open then with
    # your default editor
    local FILES
    FILES="$(__fsel)"
    if [ -z "$FILES" ]
    then
        zle reset-prompt
        return 1
    fi
    eval "$EDITOR $FILES"
    zle reset-prompt
}
zle -N __edit_file_widget
bindkey -M viins '^E' __edit_file_widget
