[core]
  editor = nvim
[alias]
  unstage = reset HEAD --
  lol = log --graph --pretty=oneline --abbrev-commit --decorate --all
  co = checkout
  cong = config --global
  props = config --get-regexp
  del = branch -D
  tagcommit = rev-list -n 1
[merge]
  tool = vimdiff
  conflictstyle = diff3
[push]
  default = simple
[color]
  ui = true
[color "diff"]
  old = red
[diff]
  tool = vimdiff
[difftool]
  prompt = false
[mergetool]
  keepBackup = false
  prompt = true
[mergetool "vimdiff"]
  cmd = nvim -d $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
