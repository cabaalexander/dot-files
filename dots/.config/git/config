[user]
  email = cabaalexander321@gmail.com
  name = cabaalexander
[alias]
  unstage = reset HEAD --
  lol = log --graph --pretty=oneline --abbrev-commit --decorate --all
  co = checkout
  cong = config --global
  props = config --get-regexp
  del = branch -D
  delremote = push --delete
  tagcommit = rev-list -n 1
  bsort = for-each-ref --sort=committerdate refs/heads/ --format='%(committerdate:short) %(refname:short)'
  unassume = update-index --no-assume-unchanged
  assume = update-index --assume-unchanged
  lsassumed = "!git ls-files -v | grep ^h | cut -c 3-"
[merge]
  tool = vimdiff
  conflictstyle = diff3
[push]
  default = simple
[color]
  ui = true
[color "diff"]
  old = red
[diff]
  tool = vimdiff
[difftool]
  prompt = false
[mergetool]
  keepBackup = false
  prompt = true
[mergetool "vimdiff"]
  cmd = nvim -d $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
