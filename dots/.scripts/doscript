#!/bin/bash
set -Eeuo pipefail

make_script()
{
    local script_name
    script_name=$1

cat <<EOF > "$script_name"
#!/bin/bash
set -Eeuo pipefail
EOF

    chmod u+x "$script_name"
    echo ":: Script \`$script_name\` created ::"
}

main(){
    for script in ${all[*]}; do
        make_script "$script"
    done
}

while getopts ":q" OPT; do
    case $OPT in
        q) QUIET="yup" ;;
        *) # do default stuff ;;
    esac
done
shift $((OPTIND - 1))

all="${*:-script.sh}"

main

if [ -n "${QUIET:-}" ]; then
    exit 0
fi

eval "$EDITOR -c'norm G' ${all[*]}"
