#!/bin/bash
set -Eeuo pipefail

all="${*:-script.sh}"

make_script()
{
    local script_name
    script_name=$1

cat <<EOF > "$script_name"
#!/bin/bash
set -Eeuo pipefail
EOF

    chmod u+x "$script_name"
    echo ":: Script \`$script_name\` created ::"
}

for script in ${all[*]}; do
    make_script "$script"
done

eval "$EDITOR -c'norm G' ${all[*]}"
