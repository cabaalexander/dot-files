#!/bin/bash

ALL="${*:-script.sh}"

__make_script()
{
    local SCRIPT_NAME
    SCRIPT_NAME=$1
    echo "#!/bin/bash -e" > "$SCRIPT_NAME"
    chmod u+x "$SCRIPT_NAME"
    echo ":: Script \`$SCRIPT_NAME\` created ::"
}

for SCRIPT in ${ALL[*]}; do
    __make_script "$SCRIPT"
done

eval "$EDITOR ${ALL[*]}"
