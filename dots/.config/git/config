[user]
    email = cabaalexander321@gmail.com
    name = cabaalexander
[alias]
    chp = cherry-pick
    unstage = reset HEAD --
    lol = log --color --graph --pretty=format:'%C(auto)%h%Creset -%C(auto)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --all
    rlol = log --stat --graph --pretty=oneline --abbrev-commit --date=relative
    co = checkout
    cong = config --global
    props = config --get-regexp
    del = branch -D
    delremote = push --delete origin
    tagcommit = rev-list -n 1
    bsort = for-each-ref --sort=committerdate refs/heads/ --format='%(committerdate:short) %(refname:short)'
    unassume = update-index --no-assume-unchanged
    assume = update-index --assume-unchanged
    lsassumed = "!git ls-files -v | grep ^h | cut -c 3-"
    temp = "!git checkout -b temp && git add . && git commit -m temp"
    untemp = "!git checkout temp && git reset --soft HEAD~1 && git checkout master && git branch -D temp"
    rank = shortlog -sn --no-merges
[merge]
    tool = fugitive
    conflictstyle = diff3
[push]
    default = simple
[color]
    ui = true
[color "diff"]
    old = red
    meta = yellow
    frag = magenta
    commit = yellow
    new = green
    whitespace = red reverse
[diff]
    tool = fugitive
[difftool]
    prompt = false
[mergetool]
    keepBackup = false
    prompt = true
[mergetool "fugitive"]
    cmd = nvim -f -c \"Gvdiff\" \"$MERGED\"
[core]
    pager = diff-so-fancy | less --tabs=4 -RFX
[color "diff-highlight"]
    oldNormal = red
    oldHighlight = red 52
    newNormal = green
    newHighlight = green 22
